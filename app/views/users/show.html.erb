<a href="/logout">Log Out</a>
<a href="/home">Projects Dashboard</a>
<% if @user.id == session[:user_id] %>
  <a href="/users/<%= @user.id %>/edit">Edit Your Profile</a>
<% else %>
  <a href="/users">Back to All Users</a>
<% end %>
<h1><%= @user.first_name %> <%= @user.last_name %></h1>
<h4><%= @user.email %>
<h3>User Tasks</h3>
<% @tasks.each do |task| %>
  <form action="/tasks/<%= task.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="checkbox" onChange="this.form.submit()" name="task[completed]" value="true"><%= task.name %></input>
  </form>
<% end %>
