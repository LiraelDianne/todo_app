<h1><%=@project.name%></h1>
<h4 class="team">Team members:
	<% @project.users.each do |u| %>
		<a href="/users/<%=u.id%>"><%=u.first_name%> <%=u.last_name%></a>
	<% end %>
</h4>
<h2>Your tasks:</h2>
<div class="user_tasks">
	<% @user_tasks.each do |t| %> 
		<div class="task<%=t.id%>">
			<form action='/tasks/<%=task.id%>' method='post'>
				<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
				<input type="hidden" name='_method' value="put">
				<input type="checkbox" onChange="this.form.submit()" name='task[completed]' value="true">
			</form>
			<p><%=t.name%></p>
		</div>
	<% end %>
</div>
<h2>Team tasks:</h2>
<div class="team_tasks">
	<% @tasks.each do |t| %> 
		<div class="task<%=t.id%>">
			<form action='/tasks/<%=task.id%>' method='post'>
				<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
				<input type="hidden" name='_method' value="put">
				<input type="checkbox" onChange="this.form.submit()" name='task[completed]' value="true">
			</form>
			<p><%=t.name%></p>
		</div>
	<% end %>
</div>

<h3>Add a task:</h3>
<form action="/projects/:id/tasks/new" method="post">
  <fieldset>
    <legend>Task</legend>
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <input type="text" name="task[name]" placeholder="Name">
      <input type="date" name="task[due_date]" placeholder="Due Date">
      <textarea name="task[description]" rows="8" cols="40">Description</textarea>
      <label for="assign_user">Assign to:</label>
      <% @project.users.each do |u| %>
      	<input type="checkbox" id="assign_user" name="task[user]" value="<%=u.id%>">
      <% end %>
      <input type="submit" value="New Task">
  </fieldset>
</form>
<h2>Project details:</h2>
<p><%=@project.description%></p>


