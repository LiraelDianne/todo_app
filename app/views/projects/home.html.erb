<a href="/users">View All Users</a>
<a href="/tasks">View All Your Tasks</a>
<h1>Projects</h1>
<a href="/projects/new">Create a New Project</a>
<% @projects.each do |project| %>
  <a href="/projects/<%= project.id %>">
    <h4><%= project.name %></h4>
  </a>
  <ul>
    <% project.users.each do |u| %>
    <li><%= u.first_name  %></li>
    <% end %>
  </ul>
<% end %>
<h2>Add a Task</h2>
<form action="/tasks" method="post">
  <fieldset>
    <legend>Task</legend>
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <input type="text" name="task[name]" placeholder="Name">
      <input type="date" name="task[due_date]" placeholder="Due Date">
      <textarea name="task[description]" rows="8" cols="40">Description</textarea>
      <input type="submit" value="Create Task">
  </fieldset>
</form>
<h3>All Tasks</h3>
<% @tasks.each do |task| %>
  <form action="/tasks/<%= task.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="checkbox" onChange="this.form.submit()" name="task[completed]" value="true"><%= task.name %></input>
  </form>
<% end %>
